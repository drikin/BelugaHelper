{
  "name": "Beluga Helper",
  "version": "0.4",
  "description": "Tiny helper extension for Beluga",
  "icons": {
      "48": "Beluga48.png",
      "128": "Beluga128.png"
  },
  "background_page": "background.html",
  "content_scripts": [
  {
      "matches": ["http://belugapods.com/*"],
      "js": ["helper.js"],
      "run_at": "document_end"
  }
  ],
  "permissions": [
    "notifications",
    "http://belugapods.com/*"
  ],
  "homepage_url": "https://github.com/drikin/BelugaHelper",
  "options_page": "settings.html"
}
